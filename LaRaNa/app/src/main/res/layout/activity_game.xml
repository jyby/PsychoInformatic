<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Game"
    android:id="@+id/mainFlashCardDisplay">

    <TextView
        android:layout_width="150dp"
        android:layout_height="259dp"
        android:text="@string/example_of_flashcard_side_A"
        android:textSize="45sp"
        android:id="@+id/flashcard_side_A"
        android:background="@color/accent_material_dark"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="145dp"
        android:layout_height="267dp"
        android:text="@string/example_of_flashcard_side_B"
        android:textSize="45sp"
        android:id="@+id/flashcard_side_B"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:background="@color/accent_material_light"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:textAlignment="center" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_joker"
            android:id="@+id/button_joker"
            android:layout_column="2"
            android:layout_row="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_flag"
            android:id="@+id/button_flag"
            android:layout_column="2"
            android:layout_row="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_validate"
            android:id="@+id/button_validate"
            android:layout_row="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_reject"
            android:id="@+id/button_reject"
            android:layout_column="1"
            android:layout_row="2" />

        <TextView
            android:id="@+id/textTrueNegative"
            android:text="@string/text_true_negative"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="left" />
        <TextView
            android:id="@+id/counterTrueNegative"
            android:text="@string/counter_true_negative"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textTruePositive"
            android:text="@string/text_true_positive"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_width="94dp" />
        <TextView
            android:id="@+id/counterTruePositive"
            android:text="@string/counter_true_positive"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textFalseNegative"
            android:text="@string/text_false_negative"
            android:layout_row="3"
            android:layout_column="0"/>
        <TextView
            android:id="@+id/counterFalseNegative"
            android:text="@string/counter_false_negative"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textFalsePositive"
            android:text="@string/text_false_positive"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_width="90dp" />
        <TextView
            android:id="@+id/counterFalsePositive"
            android:text="@string/counter_false_positive"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="10dp"
            android:textSize="20sp" />

    </GridLayout>


</RelativeLayout>
